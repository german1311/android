<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidruiz.myapplication.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.davidruiz.myapplication.CustomTextInputLayout
            android:id="@+id/til_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/ted_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CUMPLE"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />

        </com.example.davidruiz.myapplication.CustomTextInputLayout>



        <com.example.davidruiz.myapplication.CustomTextInputLayout
            android:id="@+id/til_birthdary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_birthday"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/ted_birthdarry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CUMPLE"
                android:text="HIK"
                android:drawableLeft="@drawable/ic_backspace_light"
                android:drawableStart="@drawable/ic_backspace_light"
                android:drawablePadding="5dp"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />

        </com.example.davidruiz.myapplication.CustomTextInputLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/tvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvwClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a WebView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.566"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvw" />


</android.support.constraint.ConstraintLayout>
